{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/user-svc/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/user-svc/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/user-svc",
  "projects": {
    "user-svc": {
      "type": "application",
      "root": "apps/user-svc",
      "entryFile": "main",
      "sourceRoot": "apps/user-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-svc/tsconfig.app.json"
      }
    },
    "product-svc": {
      "type": "application",
      "root": "apps/product-svc",
      "entryFile": "main",
      "sourceRoot": "apps/product-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product-svc/tsconfig.app.json"
      }
    },
    "api-gateway-svc": {
      "type": "application",
      "root": "apps/api-gateway-svc",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway-svc/tsconfig.app.json"
      }
    },
    "core-svc": {
      "type": "application",
      "root": "apps/core-svc",
      "entryFile": "main",
      "sourceRoot": "apps/core-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/core-svc/tsconfig.app.json"
      }
    },
    "auth-svc": {
      "type": "application",
      "root": "apps/auth-svc",
      "entryFile": "main",
      "sourceRoot": "apps/auth-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-svc/tsconfig.app.json"
      }
    }
  }
}